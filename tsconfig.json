{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESnext",
		"lib": [
			"ES2017"
		],
		"baseUrl": ".",
		"allowJs": true,
		"jsx": "react-native",
		"checkJs": false,
		"declaration": true,
		"isolatedModules": true,
		"outDir": "dist",
		"strict": false,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@app/*": ["./*"]
		}
	},
	"include": ["src/**/*.tsx", "src/**/*.ts", "src/index.ts", "./example/*"],
	"exclude": [
		".ci",
		"website",
		"node_modules",
		"babel.config.js",
		"jest.config.js",
		"src/index.d.ts",
		"src/**/__tests__"
	]
}
